<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="一般"
        app:iconSpaceReserved="false">
        <PreferenceScreen
            android:key="userName"
            android:title="ユーザーネーム"
            android:dialogTitle="ユーザーネーム"
            android:summary="username"
            app:iconSpaceReserved="false"/>
        <PreferenceScreen
            android:key="userID"
            android:title="ユーザーID"
            android:summary="12"
            app:iconSpaceReserved="false"/>
        <PreferenceScreen
            android:key="password"
            android:title="パスワード"
            android:summary="*********"
            app:iconSpaceReserved="false"/>
        <PreferenceScreen
            android:key="logout"
            android:title="ログアウト"
            android:summary="現在のアカウントからログアウトします"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="このアプリについて"
        app:iconSpaceReserved="false">
        <PreferenceScreen
            android:key="version"
            android:title="バージョン"
            tools:summary="1.0.0.0"
            app:iconSpaceReserved="false" />
        <PreferenceScreen
            android:title="サードパーティ通知"
            app:iconSpaceReserved="false" />
        <PreferenceScreen
            android:title="© 2022 よわよわ"
            app:iconSpaceReserved="false" >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/yowayowa-19" />
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>
